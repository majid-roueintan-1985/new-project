			@{
				int rowCount = 1;
			}
			<table id="myTable" cellpadding="3" cellspacing="0" class="show-table">
				<thead>
					<tr role="row">
						<th>
							<input type="checkbox" id="checkAll" />
						</th>
						<th></th>
						<th style="width: 150px">
							<b>Form No</b>
						</th>
						<th style="width: 250px">
							<b>	Form Name</b>
						</th>
						<th style="width: 250px">
							<b>File Name</b>
						</th>
						<th style="width: 120px">
							<b>Date</b>
						</th>
						<th style="width: 120px">
							<b>		Remarks</b>
						</th>


						<th style="width: 120px">
							<b>Actions</b>
						</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr role="row">
							<td>
								<input type="checkbox" class="checkBox" value="@item.InspectionId" />
							</td>
							<td>
								@rowCount
							</td>

							<td>
								@item.FormName
							</td>
							<td>
								@item.FormNo
							</td>
							<td>
								@item.Filename
							</td>
							<td>
								@item.InspectionDate.ToString("yyyy/MM/dd")
							</td>
							<td>
								@item.Description
							</td>
							<td>
								<a class="btn-edit-equip" onclick="Edit(@item.InspectionId)">
									Edit
								</a>
							</td>
						</tr>
						rowCount++;
					}
				</tbody>
			</table>


