@model Bnpp.DataLayer.Entities.CableLocation
@{
    ViewData["Title"] = "EditLocation";
    Layout = null;
}

<h2>Edit Location</h2>

<div id="related">
    <div id="normal">
        <form id="designForm" asp-action="EditLocation" method="post">
             <input type="hidden" asp-for="LocationId"/>
            <table cellpadding="3" cellspacing="0">
                <tbody>
                    <tr>
                        <td>
                            Location Title:
                        </td>
                        <td>
                            <input asp-for="LocationTitle" type="text" style="direction: ltr; text-align: left;">
                        </td>
                        <td>
                            <span asp-validation-for="LocationTitle"></span>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <input type="button" onclick="AjaxdocumentFormSubmit()" value="Save" id="btnGet" class="butn-save" style="direction: ltr; text-align: left;">
                            <input type="button" onclick="ShowLocation()" value="Cancel" id="Button2" class="butn-cancel" style="direction: ltr; text-align: left;">

                        </td>
                    </tr>
                </tbody>
            </table>
        </form>
    </div>
</div>

<script src="/js/jquery.min.js"></script>
<script src="/js/kendo.all.min.js"></script>
<script src="~/js/jquery.validate.min.js"></script>
<script src="~/js/jquery.validate.unobtrusive.min.js"></script>


<script type="text/javascript">

    function ShowLocation() {
        $("#newData").load("/Cables/Location/");
    }

    function AjaxdocumentFormSubmit() {
        var data = $("#designForm").serialize();
        //console.log(data);
        //alert(data);
        $.ajax({
            type: 'POST',
            url: '/Cables/EditLocation/',
            contentType: 'application/x-www-form-urlencoded; charset=UTF-8', // when we use .serialize() this generates the data in query string format. this needs the default contentType (default content type is: contentType: 'application/x-www-form-urlencoded; charset=UTF-8') so it is optional, you can remove it
            data: data,
            success: function () {
                $("#newData").load("/Cables/Location/");
            },

            error: function () {
                //alert('Failed to receive the Data');
                //console.log('Failed ');
            }
        });

    }

</script>
